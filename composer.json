{
    "name": "flipbox/php-flip",
    "description": "Clean architecture from Flipbox.",
    "license": "MIT",
    "type": "project",
    "require": {
        "php": ">=7.1",
        "laravel/lumen-framework": "^5.4",
        "vlucas/phpdotenv": "~2.2",
        "simple-validator/simple-validator": "^1.0",
        "sabre/event": "^5.0",
        "spatie/array-to-xml": "^2.5",
        "flipbox/lumen-generator": "^5.4",
        "phpmailer/phpmailer": "^5.2"
    },
    "require-dev": {
        "fzaninotto/faker": "~1.4",
        "phpunit/phpunit": "~5.0",
        "mockery/mockery": "~0.9"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Core\\": "core/"
        }
    },
    "autoload-dev": {
        "classmap": [
            "app-tests/",
            "core-tests/",
            "database/"
        ]
    },
    "scripts": {
        "php-cs-fixer": [
            "php-cs-fixer fix app --rules=@Symfony",
            "php-cs-fixer fix core --rules=@Symfony"
        ],
        "post-root-package-install": [
            "php -r \"copy('.env.example', '.env');\""
        ]
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
